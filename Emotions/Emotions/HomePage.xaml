<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Emotions.HomePage">

    <StackLayout Orientation="Vertical">
        <ScrollView>
            <StackLayout Margin="20,5,20,0">
                <ActivityIndicator x:Name="loadingCircle" IsRunning="True" IsVisible="False" />
                <Label x:Name="Heading" Font="32,Bold" HorizontalTextAlignment="Center"/>
                <Label x:Name="TagLabel" HorizontalTextAlignment="Start"/>
                <Image x:Name="image" />
            </StackLayout>
        </ScrollView>
        <Button Image="camera_button.png" Clicked="LoadCamera" BackgroundColor="Transparent" BorderColor="Transparent" VerticalOptions="EndAndExpand" Margin="0, -15, 0, -5">
        </Button>
    </StackLayout>


</ContentPage>