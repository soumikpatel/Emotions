<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Emotions.HomePage">
    <ScrollView>
        <StackLayout Margin="20" Orientation="Vertical">
            <ActivityIndicator x:Name="loadingCircle" IsRunning="True" IsVisible="False" />
            <Label x:Name="TagLabel" HorizontalTextAlignment="Center"/>
            <Label/>
            <Image x:Name="image" />
            <Button Image="camera_button.png" Clicked="LoadCamera" BackgroundColor="Transparent" BorderColor="Transparent" VerticalOptions="EndAndExpand">
            </Button>
        </StackLayout>
    </ScrollView>
    

</ContentPage>